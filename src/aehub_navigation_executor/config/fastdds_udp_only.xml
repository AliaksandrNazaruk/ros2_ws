<?xml version="1.0" encoding="UTF-8" ?>
<!--
  Fast DDS profile to disable SHM transport (use UDPv4 only).

  Rationale: On constrained/embedded systems (RPi), SHM transport frequently fails with
  "open_and_lock_file failed" due to stale /dev/shm locks and leads to unstable discovery.
-->
<profiles xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
  <transport_descriptors>
    <transport_descriptor>
      <transport_id>udp_transport</transport_id>
      <type>UDPv4</type>
    </transport_descriptor>
  </transport_descriptors>

  <participant profile_name="udp_only_participant" is_default_profile="true">
    <rtps>
      <useBuiltinTransports>false</useBuiltinTransports>
      <userTransports>
        <transport_id>udp_transport</transport_id>
      </userTransports>
    </rtps>
  </participant>
</profiles>

